<div class="container" style="margin:100px auto">
	<div class="row">
		<div class="col-6 offset-3">
			<h4>Modificar el resultado</h4>
			<form action="/admin/resultados/modificar" method="post" enctype="multipart/form-data">
				<input type="hidden" value="{{resultado.id}}" name="id">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Deporte" name="deporte" value={{resultado.deporte}}>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Categoría" name="categoria" value={{resultado.categoria}}>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Fecha N° (o amistoso)" name="fecha" value={{resultado.fecha}}>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Cancha o club" name="cancha" value={{resultado.cancha}}>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Club Local" name="local" value={{resultado.local}}>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Puntos Local" name="puntosl" value={{resultado.puntosl}}>
				</div>
				<div class="form-group">
					<textarea class="form-control" placeholder="Club Visitante" name="visitante">{{resultado.visitante}}</textarea>
				</div>
				<div class="form-group">
					<textarea type="text" class="form-control" placeholder="Puntos Visitante" name="puntosv">{{resultado.puntosv}}</textarea>
				</div>
				<div class="mb-3 row">
					<p>
						<label>Imagen: <input type="file" name="imagen" id="imagen" /></label>						
					</p>
					<p>
						<label><input type="checkbox" name="img_delete" id="img_delete" value="1">¿Eliminar imagen actual?</label>
						<input type="hidden" name="img_original" value="{{novedad.img_id}}">
					</p>
				</div>
				
				<button type="submit" class="btn btn-primary">Modificar</button>
			</form>
			{{#if error}}
			<p>{{message}}</p>
			{{/if}}
		</div>
	</div>
</div>