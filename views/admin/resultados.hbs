<h2>RESULTADOS</h2>

<div class="container" style= "margin-top:50px;">
{{!-- fila 1 --}}
	<div class="row">
			<p class="text-end">Bienvenide, {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a></p>
	</div>
{{!-- fin fila 1 --}}
{{!-- fila 2 --}}
	<div class="row">
		<div class="col-7">
			<h3>Últimos resultados</h3>
		</div>
		<div class="col-5 text-end">
			<a class="btn btn-success" href="/admin/resultados/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
		</div>
	</div>
{{!-- fin fila 2 --}}
{{!-- fila 3 --}}
	<div class="row">
		<div class="col">
			<table class="table">
				<thead>
					<tr class="table-dark">
						<th scope="col">#</th>
						<th scope="col">Deporte</th>
						<th scope="col">Categoría</th>
						<th scope="col">Fecha</th>
						<th scope="col">Cancha</th>
						<th scope="col">Local</th>
						<th scope="col">Puntos</th>
						<th scope="col">Visitante</th>
						<th scope="col">Puntos</th>
						<th scope="col">Imagen</th>
						<th class="Text-end">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{{#each resultados}}
					<tr>
						<th scope="row">{{id}}</th>
						<td>{{Deporte}}</ts>
						<td>{{Categoria}}</ts>
						<td>{{Fecha}}</ts>
						<td>{{Cancha}}</ts>
						<td>{{Local}}</ts>
						<td>{{PuntosL}}</ts>
						<td>{{Visitante}}</ts>
						<td>{{PuntosV}}</ts>
						<td>{{{imagen}}}</ts>
						<td class="text-end">
							<a class="btn btn-secondary" href="/admin/resultados/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
							<a class="btn btn-secondary" href="/admin/resultados/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
{{!-- fin fila 3 --}}
</div>